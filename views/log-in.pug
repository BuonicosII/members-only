extends layout

block content
  div
    h1= title
    form(method='POST')
      div.formFields
        label(for="username") Username
        input#username(type='text', name='username' required)
        label(for="password") Password
        input#password(type='password', name='password' required)
      button(type='submit') Submit

    if errors
      ul
        for error in errors
            li!= error.msg 